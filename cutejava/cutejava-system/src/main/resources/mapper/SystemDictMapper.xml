<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.odboy.core.dal.mysql.SystemDictMapper">
    <select id="selectDictByArgs" resultType="cn.odboy.core.dal.dataobject.SystemDictTb">
        SELECT
        *
        from system_dict d
        <where>
            <if test="criteria.blurry != null and criteria.blurry != ''">
                and (
                d.name like concat('%', #{criteria.blurry}, '%')
                or d.description like concat('%', #{criteria.blurry}, '%')
                )
            </if>
        </where>
        order by d.id desc
    </select>
</mapper>